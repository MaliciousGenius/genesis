# =============================================================================================================
.PHONY: *

# -------------------------------------------------------------------------------------------------------------
# переменные
# -------------------------------------------------------------------------------------------------------------
NAME?=$(shell basename $(shell pwd))
DOERS?=$(shell ls | grep yaml | cut -d. -f1)

# -------------------------------------------------------------------------------------------------------------
# цели
# -------------------------------------------------------------------------------------------------------------
$(NAME): $(DOERS)
	@echo $< $@
	# : сотвори себя сам сказали они себе

$(DOERS):
	@docker-compose run --rm $(DOERS) /bin/bash -l -c "echo $@"
